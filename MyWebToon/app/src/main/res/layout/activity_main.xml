<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageButton
        android:id="@+id/imageView"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/imgmain"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text="잠깐! 이 웹툰들 잊지 않았나요?"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:textSize="18sp"/>


    <HorizontalScrollView
        app:layout_constraintTop_toBottomOf="@id/imageView"
        android:id="@+id/layout_remember"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageButton
                android:id="@+id/layout_remember_image1"
                android:scaleType="fitXY"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:src="@drawable/img1"/>

            <ImageButton
                android:id="@+id/layout_remember_image2"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/img2" />

            <ImageButton
                android:id="@+id/layout_remember_image3"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/img3" />

            <ImageButton
                android:id="@+id/remember_image4"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:padding="8dp"
                android:src="@drawable/img4"/>

            <ImageButton
                android:id="@+id/remember_image5"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:padding="8dp"
                android:src="@drawable/img6"/>

            <ImageButton
                android:id="@+id/remember_image6"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:padding="8dp"
                android:src="@drawable/sparta"/>




        </LinearLayout>




    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView">


    </LinearLayout>





    <HorizontalScrollView
        android:id="@+id/days"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layout_remember"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:backgroundTint="@color/white"
                android:id="@+id/btn_new"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="신작"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <Button
                android:backgroundTint="@color/white"
                android:id="@+id/btn_daily"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="매일+"
                android:textStyle="bold"
                android:textSize="14sp"/>





            <Button
                android:id="@+id/btn_mon"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:text="월"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_tues"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:text="화"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_wed"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:text="수"
                android:textSize="14sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/btn_thu"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:text="목"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:backgroundTint="@color/white"
                android:id="@+id/btn_fri"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="금"
                android:textStyle="bold"
                android:textSize="14sp"/>


            <Button
                android:backgroundTint="@color/white"
                android:id="@+id/btn_sat"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="토"
                android:textStyle="bold"
                android:textSize="14sp"/>


            <Button
                android:backgroundTint="@color/white"
                android:id="@+id/btn_sun"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="일"
                android:textStyle="bold"
                android:textSize="14sp"/>


            <Button
                android:id="@+id/btn_wan"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:text="완결"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

    </HorizontalScrollView>


    <LinearLayout
        android:id="@+id/webtoon_onetwothree"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/days"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="128dp">

        <ImageButton
            android:id="@+id/ib_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/sun"
            android:scaleType="fitXY"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/ib_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/img5"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/ib_three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/img6"
            tools:ignore="SpeakableTextPresentCheck" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/webtoon_fourtosix"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/webtoon_onetwothree"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="128dp">

        <ImageButton
            android:id="@+id/ib_four"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/smile"
            android:scaleType="fitXY"
            tools:ignore="SpeakableTextPresentCheck"/>


        <ImageButton
            android:id="@+id/ib_five"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/img7"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/ib_six"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/sparta"
            android:scaleType="fitXY"
            tools:ignore="SpeakableTextPresentCheck"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/webtoon_onetwothree">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="웹툰 1         "
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="웹툰 2   "
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="웹툰 3 "
            android:layout_weight="1"/>




    </LinearLayout>

    <LinearLayout
        android:id="@+id/tv_fourtosix"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/webtoon_fourtosix">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="웹툰 4 "
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="웹툰 5"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="웹툰 6 "
            android:layout_weight="1"/>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        app:layout_constraintTop_toBottomOf="@id/tv_fourtosix"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="240dp"
            android:src="@drawable/img8"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="240dp"
            android:src="@drawable/img6"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="240dp"
            android:src="@drawable/img7"
            android:layout_weight="1">


        </ImageView>






    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>